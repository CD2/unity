- provide :title, 'Blogs'
- provide :body_class, 'blog_page'
- provide :menu_item, '/blogs'

#title_panel
  %h1 Latest from Unity

#blogs_container
  #blogs_container_inner
    - @blogs.each do |blog|
      .blog_teaser
        - unless blog.banner.blank?
          = image_tag blog.banner
        .blog_teaser_content
          = link_to blog.name, blog
          - if blog.published_date
            .date= blog.published_date.strftime("%B %Y")
        = link_to '>', blog

#navigation_control
  #navigation_control_inner
    = will_paginate @blogs, :previous_label => 'Older', :next_label => 'Newer'