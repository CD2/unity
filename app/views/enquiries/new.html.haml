- provide :title, 'Contact Us'
- provide :body_class, 'contact_page'
- provide :menu_item, '/contact_us'


#title_panel
  #title_panel_inner
    %h1 Get in Touch
    %h2 we’re commited to providing high quality, trustworth health and wellbeing
    %p If you have any questions regarding anything on this site, need more information or are interested in talking to us about some of our services, please get in touch and we’ll be more than happy to help.
    #action_container
      = link_to 'mail@unityoccupationalhealth.com', 'mailto:unityoccupationalhealth<mail@unityoccupationalhealth.com>'
      %span 01603 250015

#tabs_container
  #tabs_head_container
    = label_tag :tab_form, 'Send us a message', class: 'active'
    = label_tag :tab_map, 'Where are we'

  = radio_button_tag :tab, 'form', {checked:1}
  .tab#form_tab
    #form_tab_inner
      = render 'form'
  = radio_button_tag :tab, 'map'
  .tab#map_tab
    %iframe{src: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2421.1882664120535!2d1.2419835012702807!3d52.63851158439784!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47d9e11bf4bacf63%3A0x4aee80d84a89a82c!2s552+Dereham+Rd%2C+Norwich%2C+Norfolk+NR5+8TU%2C+UK!5e0!3m2!1sen!2s!4v1457502041501", width: "600", height: "450", frameborder: "0", style: "border:0", allowfullscreen: 1}